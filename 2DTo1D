#include <stdio.h>
/*
void SortCOLUMN(int (*s)[10], int *b, int *n,int mm, int nn)
{
	int ROW, COLUMN;
	for (COLUMN = 0; COLUMN < nn; COLUMN++)
	{
		for (ROW = 0; ROW < mm; ROW++)
		{
			b[*n] = *(*(s+ ROW)+ COLUMN);
			(*n)++;
		}
	}
}
void SortROW(int(*s)[10], int *b, int *n, int mm, int nn)
{
	int ROW, COLUMN;
	for (ROW = 0; ROW < mm; ROW++)
	{
		for (COLUMN = 0; COLUMN < nn; COLUMN++)
		{
			b[*n] = *(*(s + ROW) + COLUMN);
			(*n)++;
		}
	}
}
*/
void Sort(int(*s)[10], int *b, int *n, int mm, int nn,int flag)
{
	int i, j, num_i, num_j;
	if (flag)//SortCOLUMN
	{
		num_i = nn;
		num_j = mm;
	}
	else //SortROW
	{
		num_i = mm;
		num_j = nn;

	}
	for (i=0; i < num_i; i++)
	{
		for (j=0; j < num_j; j++)
		{
			if (flag)
				b[*n] = *(*(s + j) + i);//SortCOLUMN
			else
				b[*n] = *(*(s + i) + j);//SortROW
			(*n)++;
		}
	}
}
void main()
{
  int w[10][10]={{33,33,33,33},{44,44,44,44},{55,55,55,55}}, i, j;
  int a[100]={0},n=0,flag ;
  FILE *out;
  printf("The matrix:\n");
  for (i=0; i<3; i++)
    {for (j=0;j<4;j++)  
        printf("%3d",w[i][j]);
     printf("\n");
    }
  /******************************/
  printf("SortByColumn:1,SortByRow:0\nEnter flag:");
  scanf("%d", &flag);
	/*
  if (flag) 
	  SortCOLUMN(w, a, &n, 3, 4);
  else SortROW(w, a, &n, 3, 4);*/
	Sort(w, a, &n, 3, 4, flag);
  /******************************/
  out=fopen("out.dat","w");
  printf("The A array:\n");
  for(i=0; i<n; i++)  
  {     printf("%3d",a[i]); 
	fprintf(out,"%d ",a[i]);
  }
  printf("\n\n");
  fclose(out);
  /******************************/
}
